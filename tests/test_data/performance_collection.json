                            "",
                            "pm.test('Final update contains correct data', function () {",
                            "    const responseJson = pm.response.json();",
                            "    pm.expect(responseJson.name).to.include('Final');",
                            "    pm.expect(responseJson.status).to.equal('completed');",
                            "});"
                        ],
                        "type": "text/javascript"
                    }
                }
            ]
        }
