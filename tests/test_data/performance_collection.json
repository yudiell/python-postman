                    "script": {
                        "exec": [
                            "pm.test('Variable chain 1 successful', function () {",
                            "    pm.response.to.have.status(200);",
                            "});",
                            "",
                            "const responseJson = pm.response.json();",
                            "pm.collectionVariables.set('chain_user_name', responseJson.name);",
