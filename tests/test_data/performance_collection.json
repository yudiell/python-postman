    "event": [
        {
            "listen": "prerequest",
            "script": {
                "exec": [
                    "// Performance tracking",
                    "pm.collectionVariables.set('request_start_time', Date.now());"
                ],
                "type": "text/javascript"
            }
        },
        {
            "listen": "test",
            "script": {
                "exec": [
                    "// Performance validation",
                    "const startTime = pm.collectionVariables.get('request_start_time');",
                    "const duration = Date.now() - startTime;",
                    "",
                    "pm.test('Request completed within performance threshold', function () {",
                    "    pm.expect(duration).to.be.below(2000);",
                    "});"
                ],
                "type": "text/javascript"
            }
        }
    ],
