            ]
        },
        {
            "name": "Variable Chain Request 2",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"name\": \"{{chain_user_name}} Updated\",\n  \"email\": \"{{chain_user_email}}\",\n  \"source\": \"performance_test\"\n}"
